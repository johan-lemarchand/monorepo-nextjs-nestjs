{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "framer-motion": ["../../packages/ui/node_modules/framer-motion"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "postcss.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
